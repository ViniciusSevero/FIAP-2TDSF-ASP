@model Fiap.Exemplo03.MVC.Models.Animal

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(i => i.Nome)
        @Html.TextBoxFor(i => i.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.DataNascimento)
        @Html.TextBoxFor(b => b.DataNascimento, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Especie)
        @Html.TextAreaFor(b => b.Especie, new { @class = "form-control" })
    </div>

    <input type="submit" value="Salvar" class="btn btn-primary" />
}


